{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Import Module",
            "command": "pwsh",
            "type": "shell",
            "windows":{
                "command": "powershell"
            },
            "args": [
                "-File",
                "${workspaceFolder}\\tools\\build.ps1",
                "-Development",
                "-Verbose"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "clear": false,
                "echo": true,
                "showReuseMessage": true,
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}